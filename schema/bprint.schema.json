{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://chaim.dev/schemas/bprint.schema.json",
  "title": "Chaim Blueprint (.bprint)",
  "type": "object",
  "required": ["schemaVersion", "entityName", "description", "primaryKey", "fields"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": {
      "type": "number",
      "description": "Schema version number (e.g., 1.0, 2.0)."
    },
    "entityName": {
      "type": "string",
      "minLength": 1,
      "description": "Entity name (e.g., 'Customer', 'Order', 'Product')."
    },
    "description": {
      "type": "string",
      "description": "Description of the entity and its purpose."
    },
    "primaryKey": {
      "$ref": "#/$defs/primaryKey"
    },
    "fields": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/field"
      }
    }
  },
  "$defs": {
    "primaryKey": {
      "type": "object",
      "required": ["partitionKey"],
      "additionalProperties": false,
      "properties": {
        "partitionKey": {
          "type": "string",
          "minLength": 1
        },
        "sortKey": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "field": {
      "type": "object",
      "required": ["name", "type"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "nameOverride": {
          "type": "string",
          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
          "description": "Optional override for the generated code identifier. Must be a valid identifier in all target languages."
        },
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "timestamp", "list", "map", "stringSet", "numberSet"]
        },
        "required": {
          "type": "boolean",
          "default": false
        },
        "default": {
          "type": ["string", "number", "boolean"]
        },
        "enum": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "description": {
          "type": "string"
        },
        "constraints": {
          "type": "object",
          "description": "Validation constraints for the field value",
          "additionalProperties": false,
          "properties": {
            "minLength": {
              "type": "integer",
              "minimum": 0,
              "description": "Minimum string length (applies to string type)"
            },
            "maxLength": {
              "type": "integer",
              "minimum": 0,
              "description": "Maximum string length (applies to string type)"
            },
            "pattern": {
              "type": "string",
              "description": "Regex pattern for validation (applies to string type)"
            },
            "min": {
              "type": "number",
              "description": "Minimum value (applies to number type)"
            },
            "max": {
              "type": "number",
              "description": "Maximum value (applies to number type)"
            }
          }
        },
        "annotations": {
          "type": "object",
          "description": "Extensible metadata annotations for the field",
          "additionalProperties": true
        },
        "items": {
          "type": "object",
          "description": "Element type definition for list fields",
          "required": ["type"],
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": ["string", "number", "boolean", "timestamp", "map"]
            },
            "fields": {
              "type": "array",
              "description": "Nested fields when items type is map",
              "items": { "$ref": "#/$defs/nestedField" },
              "minItems": 1
            }
          }
        },
        "fields": {
          "type": "array",
          "description": "Nested field definitions for map type fields",
          "items": { "$ref": "#/$defs/nestedField" },
          "minItems": 1
        }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "list" } }, "required": ["type"] },
          "then": { "required": ["items"] }
        },
        {
          "if": { "properties": { "type": { "const": "map" } }, "required": ["type"] },
          "then": { "required": ["fields"] }
        }
      ]
    },
    "nestedField": {
      "type": "object",
      "description": "Simplified field definition for nested map structures (name + type only)",
      "required": ["name", "type"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "timestamp"]
        }
      }
    }
  }
}
