{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://chaim.dev/schemas/bprint.schema.json",
  "title": "Chaim Blueprint (.bprint)",
  "type": "object",
  "required": ["schemaVersion", "namespace", "description", "entity"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": {
      "type": "string",
      "minLength": 1,
      "description": "Semantic or opaque schema version string (e.g., 'v1')."
    },
    "namespace": {
      "type": "string",
      "minLength": 1,
      "description": "Logical namespace for entities (e.g., 'acme.orders')."
    },
    "description": {
      "type": "string",
      "description": "Description of the database schema and its purpose."
    },
    "entity": {
      "$ref": "#/$defs/entity"
    }
  },
  "$defs": {
    "entity": {
      "type": "object",
      "required": ["primaryKey", "fields"],
      "additionalProperties": false,
      "properties": {
        "primaryKey": {
          "$ref": "#/$defs/primaryKey"
        },
        "fields": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/field"
          }
        },
        "annotations": {
          "type": "object",
          "description": "Extensible map for future annotations (e.g., pii, retention).",
          "additionalProperties": true
        }
      }
    },
    "primaryKey": {
      "type": "object",
      "required": ["partitionKey"],
      "additionalProperties": false,
      "properties": {
        "partitionKey": {
          "type": "string",
          "minLength": 1
        },
        "sortKey": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "field": {
      "type": "object",
      "required": ["name", "type"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "timestamp"]
        },
        "required": {
          "type": "boolean",
          "default": false
        },
        "default": {
          "type": ["string", "number", "boolean"]
        },
        "enum": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "description": {
          "type": "string"
        },
        "annotations": {
          "type": "object",
          "description": "Future-proof annotations (privacy, security, etc.).",
          "additionalProperties": true
        }
      }
    }
  }
}
